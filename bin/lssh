#!/usr/bin/bash

# Get Mintty color schemes
shopt -s expand_aliases
source ~/.bash_mintty_colors

USERNAME=`whoami`
DATE=`/usr/bin/date +%Y-%m-%d`
LOGDIR="/home/$USERNAME/sshlogs"
MACHINE=`/usr/bin/hostname`
if [[ $1 == *"@"* ]]
then
 FULLHOST=`echo $1|/usr/bin/cut -d'@' -f 2`
else
 FULLHOST=$1
fi

# Clip the hostname from the FQDN, DNS suffix-search will replace, if needed. 
HOST=`echo $FULLHOST|cut -d'.' -f1`

# Log ssh client activity via script
/usr/bin/script -a -q -c "/usr/bin/ssh -X -Y $1" $LOGDIR/$DATE-$MACHINE-$HOST.log

# Reset color scheme to default (grey on black)
default
